{
  "name": "maven-settings-xml-action",
  "version": "0.0.17",
  "description": "Update maven ~/.m2/settings.xml",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@actions/core": "^1.3.0",
    "fs": "0.0.1-security",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "xml-formatter": "^2.4.0",
    "xmldom": "^0.5.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "eslint": "^7.3.0",
    "eslint-plugin-mocha": "^7.0.1",
    "mocha": "^8.2.1",
    "mocha-eslint": "^6.0.0"
  },
  "scripts": {
    "lint": "eslint ./src/*.js",
    "test": "mocha",
    "build_index": "ncc build src/index.js -o dist ",
    "copy_templates": "rm -rf dist/template && mkdir dist/template && cp -a template/. dist/template/",
    "build": "npm run build_index && npm run copy_templates"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whelk-io/maven-settings-xml-action.git"
  },
